                    <select id="filtro-estabelecimento" class="filtro-estabelecimento" name="estabelecimentos[]" multiple="multiple"></select>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="limparFiltro" class="btn btn-secondary" data-bs-dismiss="modal">Limpar Filtro</button>
                <button type="button" id="filtrarTransacoes" class="btn btn-primary" data-bs-dismiss="modal">Filtrar</button>
            </div>
        </div>
    </div>
</div>